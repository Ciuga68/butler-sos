<?xml version="1.0"?>
<configuration>
    <appender name="RepositoryErrorLogger" type="log4net.Appender.UdpAppender">
        <param name="threshold" value="warn" />
        <param name="remoteAddress" value="<host where Butler SOS is running>" />
        <param name="remotePort" value="9995" />
        <layout type="log4net.Layout.PatternLayout">
            <converter>
                <param name="name" value="hostname" />
                <param name="type" value="Qlik.Sense.Logging.log4net.Layout.Pattern.HostNamePatternConverter" />
            </converter>
            <param name="conversionPattern" value="%hostname;Repository;%level;%message" />
        </layout>
    </appender>
    <logger name="System.Repository">
        <appender-ref ref="RepositoryErrorLogger" />
    </logger>
</configuration>
