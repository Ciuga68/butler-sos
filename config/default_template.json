{
    "Butler-SOS-Influxdb": {
        "logLevel": "verbose",
        "restServer": {
            // Paths to ssl certificate and key used to secure the communication to the REST API. Can be pem or pvk/cer
            "sslCertPath": "/path/to/ssl/cert/client.cer",
            "sslCertKeyPath": "/path/to/ssl/cert/client_key.pvk"
        },
        "mqttConfig": {
            "enableMQTT": true,
            "brokerIP": "<IP of MQTT server>",
            "baseTopic": "butler-sos/"
        },
        "influxdbConfig": {
            "enableInfluxdb": true,
            "hostIP": "<IP or FQDN of Influxdb server>",
            "dbName": "SenseOps"
        },
        "pollingInterval": 5000,
        "serversToMonitor": {
            "servers": [{
                    "host": "<server1.my.domain>",
                    "serverName": "<server1>",
                    "availableRAM": 32000
                },
                {
                    "host": "<server2.my.domain>",
                    "serverName": "<server2>",
                    "availableRAM": 24000
                }
            ]
        }
    }
}